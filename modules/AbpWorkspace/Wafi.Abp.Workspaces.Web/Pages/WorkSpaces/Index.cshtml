@page "/workspaces"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@using Wafi.Abp.Workspaces.Web.Pages.WorkSpaces
@using Wafi.Abp.Workspaces.Localization
@inject IHtmlLocalizer<WorkspaceResource> L
@inject IAuthorizationService AuthorizationService
@{
	ViewData["Title"] = "Workspaces";
}

@section scripts {
	<abp-script src="/Pages/Workspaces/Index.js" />
}

<abp-card>
	<abp-card-header class="d-flex justify-content-between align-items-center">
		<h2 class="m-0">@L["Workspaces"]</h2> &nbsp;
		<button id="NewWorkspaceButton" class="btn btn-primary">
			<i class="fa fa-plus"></i>
			<span class="label">@L["New Workspace"]</span>
		</button>
	</abp-card-header>
	<abp-card-body>
		<abp-table striped-rows="true" id="WorkspacesTable"></abp-table>
	</abp-card-body>
</abp-card>
